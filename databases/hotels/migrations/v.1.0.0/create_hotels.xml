<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="1" author="shurapilipuk@gmail.com">
        <createTable tableName="dict_countries" schemaName="hotel">
            <column name="id" type="bigSerial" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_dict_countries"/>
            </column>
            <column name="country" type="varchar(32)">
                <constraints unique="true" nullable="false" uniqueConstraintName="uc_country"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="shurapilipuk@gmail.com">
        <createTable tableName="dict_cities" schemaName="hotel">
            <column name="id" type="bigSerial" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_dict_cities"/>
            </column>
            <column name="city" type="varchar(32)">
                <constraints unique="true" nullable="false" uniqueConstraintName="uc_city"/>
            </column>
            <column name="country_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="dict_cities"
                baseColumnNames="country_id"
                referencedTableName="dict_countries"
                referencedColumnNames="id"
                constraintName="cities_country"/>
    </changeSet>

    <changeSet id="3" author="shurapilipuk@gmail.com">
        <createTable tableName="addresses" schemaName="hotel">
            <column name="id" type="bigSerial" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_dict_addresses"/>
            </column>
            <column name="street" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="house_number" type="varchar(8)">
                <constraints nullable="false"/>
            </column>
            <column name="country_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="city_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="country_id"
                referencedTableName="dict_countries"
                referencedColumnNames="id"
                constraintName="fk_addresses_country"/>

        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="city_id"
                referencedTableName="dict_cities"
                referencedColumnNames="id"
                constraintName="fk_hotels_city"/>
    </changeSet>

    <changeSet id="4" author="shurapilipuk@gmail.com">
        <createTable tableName="hotels" schemaName="hotel">
            <column name="id" type="bigSerial" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_hotels"/>
            </column>
            <column name="name" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="smallint">
                <constraints nullable="false"/>
            </column>
            <column name="address_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="hotels"
                baseColumnNames="address_id"
                referencedTableName="addresses"
                referencedColumnNames="id"
                constraintName="fk_hotels_address"/>
    </changeSet>

    <changeSet id="5" author="shurapilipuk@gmail.com">
        <createTable tableName="room_types" schemaName="hotel">
            <column name="id" type="bigSerial" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_room_types"/>
            </column>
            <column name="room_type" type="varchar(32)">
                <constraints unique="true" nullable="false" uniqueConstraintName="uc_hotel_room_type"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="shurapilipuk@gmail.com">
        <createTable tableName="rooms" schemaName="hotel">
            <column name="id" type="bigSerial" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_rooms"/>
            </column>
            <column name="price" type="numeric(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(264)">
                <constraints nullable="false"/>
            </column>
            <column name="room_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="hotel_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
            <column name="updated" type="timestamp" defaultValueComputed="(now() AT TIME ZONE 'utc')">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="rooms"
                baseColumnNames="room_type_id"
                referencedTableName="room_types"
                referencedColumnNames="id"
                constraintName="fk_rooms_room_type"/>

        <addForeignKeyConstraint
                baseTableName="rooms"
                baseColumnNames="hotel_id"
                referencedTableName="hotels"
                referencedColumnNames="id"
                constraintName="fk_rooms_hotel"/>
    </changeSet>

</databaseChangeLog>